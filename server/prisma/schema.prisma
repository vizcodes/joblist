generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Job {
  id          Int      @id @default(autoincrement())
  company     String
  position    String
  status      String   @default("Applied") // Applied, Interviewing, Offer, Rejected
  dateApplied DateTime @default(now())
  location    String
  logo        String?
  description String?
  messageId   String?  @unique // To prevent duplicate imports
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Settings {
  id           Int      @id @default(autoincrement())
  accessToken  String?
  refreshToken String?
  updatedAt    DateTime @updatedAt
}
